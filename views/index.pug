extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    if user
      div
        a(href="/logout") #{user.username} をログアウト
      div
        a(href="/schedules/new") やることを作る
      - var hasSchedule = schedules.length > 0
      if hasSchedule
        h3 やることリスト
        table
          tr
            th やること
            th 更新日時
          each schedule in schedules
            tr
              td #{schedule.scheduleName}
              td #{schedule.updatedAt}
              td
                form(method="post", action=`/${schedule.scheduleId}?delete=1`)
                  button(type="submit") 削除
    else
      div
        a(href="/login") ログイン